<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/repo_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#90A4AE"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/author_name"
                    android:paddingTop="8dp"
                    android:paddingRight="4dp"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/ic_person_white_18dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/repo_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/repo_desc"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/forks"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:padding="8dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_call_split_white_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/stars"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/forks"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_star_rate_white_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>